= simple_form_for @secret, html: { class: "form-horizontal" },
                                               wrapper: :horizontal_form do |f|
  = f.error_notification

  .form-inputs
    = f.select :application_environment_id, ApplicationEnvironment.all.collect { |ae| [ae.application.name+' '+ae.rails_env, ae.id] }
    = f.input :key
    = f.input :value

  .form-actions
    = f.button :submit, class: "btn btn-primary"
