- title "<%= plural_table_name %>"

%table.table.table-condensed
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.human_name %>
<% end -%>
      %th

  %tbody
    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
      %tr
<% for attribute in attributes -%>
        %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
        %td
          = link_to "Show", <%= singular_table_name %>, class: "btn btn-xs btn-success"
          = link_to "Edit", edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-xs btn-info"
          = link_to "Destroy", <%= singular_table_name %>, :method => :delete,
                               :data => { :confirm => "Are you sure?" },
                               class: "btn btn-xs btn-danger"

%br

= link_to "New <%= human_name %>", new_<%= singular_table_name %>_path, class: "btn btn-primary"
